{
    "compilerOptions": {
        "module": "es2015",
        "target": "es6",
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "lib": [
            "es2018",
            "dom"
        ],
        "sourceMap": false,
        "allowJs": true,
        "declaration": false
    },
    "include": [
        "**/*"
    ]
}